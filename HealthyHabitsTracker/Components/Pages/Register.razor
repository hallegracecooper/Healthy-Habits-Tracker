@page "/register"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Register</PageTitle>

<h3>Create an account</h3>

<form method="post" action="/auth/register" autocomplete="on">
    <AntiforgeryToken />
    <div class="mb-3">
        <label for="regEmail">Email</label>
        <input id="regEmail" name="Email" type="email" class="form-control" autocomplete="email" required />
    </div>

    <div class="mb-3">
        <label for="regPassword">Password</label>
        <input id="regPassword" name="Password" type="password" class="form-control" autocomplete="new-password"
            minlength="6" required />
    </div>

    <button class="btn btn-primary" type="submit">Register</button>
</form>

<p class="mt-3">
    Already have an account? <a href="/login">Login</a>
</p>
