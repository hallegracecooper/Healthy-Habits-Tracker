@page "/register"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Register</PageTitle>

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h2 class="mb-0">Create Account</h2>
                    <p class="mb-0 opacity-75">Join Healthy Habits Tracker today</p>
                </div>
                <div class="card-body p-4">
                    <form method="post" action="/auth/register" autocomplete="on">
                        <AntiforgeryToken />
                        <div class="mb-3">
                            <label for="regEmail" class="form-label">Email Address</label>
                            <input id="regEmail" name="Email" type="email" class="form-control" autocomplete="email"
                                required placeholder="Enter your email" />
                        </div>

                        <div class="mb-4">
                            <label for="regPassword" class="form-label">Password</label>
                            <input id="regPassword" name="Password" type="password" class="form-control"
                                autocomplete="new-password" minlength="6" required
                                placeholder="Create a password (min. 6 characters)" />
                            <div class="form-text">Password must be at least 6 characters long.</div>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <span class="oi oi-person me-2" aria-hidden="true"></span>
                                Create Account
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <p class="mb-0 text-muted">
                        Already have an account? <a href="/login" class="text-primary fw-semibold">Sign in here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
