@page "/login"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Login</PageTitle>

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h2 class="mb-0">Welcome Back</h2>
                    <p class="mb-0 opacity-75">Sign in to your account</p>
                </div>
                <div class="card-body p-4">
                    <form method="post" action="/auth/login" autocomplete="on">
                        <AntiforgeryToken />
                        <div class="mb-3">
                            <label for="loginEmail" class="form-label">Email Address</label>
                            <input id="loginEmail" name="Email" type="email" class="form-control" autocomplete="email"
                                required placeholder="Enter your email" />
                        </div>

                        <div class="mb-4">
                            <label for="loginPassword" class="form-label">Password</label>
                            <input id="loginPassword" name="Password" type="password" class="form-control"
                                autocomplete="current-password" minlength="6" required
                                placeholder="Enter your password" />
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <span class="oi oi-account-login me-2" aria-hidden="true"></span>
                                Sign In
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <p class="mb-0 text-muted">
                        Don't have an account? <a href="/register" class="text-primary fw-semibold">Create one here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
